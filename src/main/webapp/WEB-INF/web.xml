<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <context-param>
        <param-name>jakarta.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <context-param>
        <param-name>jakarta.faces.FACELETS_SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- Roles -->
    <security-role>
        <description>System administrator</description>
        <role-name>admin</role-name>
    </security-role>

    <security-role>
        <description>Common authenticated user</description>
        <role-name>user</role-name>
    </security-role>

    <security-role>
        <description>atendente / prestador de serviço</description>
        <role-name>atendente</role-name>
    </security-role>
    <security-role>
        <description>recepcionista / recepção</description>
        <role-name>recepcionista</role-name>
    </security-role>

    <!-- Public pages and static resources (no authentication required) -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public Pages and Resources</web-resource-name>
            <url-pattern>/login.xhtml</url-pattern>
            <url-pattern>/activate.xhtml</url-pattern>
            <url-pattern>/request_reset.xhtml</url-pattern>
            <url-pattern>/reset_password.xhtml</url-pattern>
            <url-pattern>/app/newlogin.xhtml</url-pattern>
            <url-pattern>/resources/*</url-pattern>
            <url-pattern>/javax.faces.resource/*</url-pattern>
        </web-resource-collection>
        <!-- no <auth-constraint> means public access -->
    </security-constraint>

    <!-- Password management pages: require any authenticated role -->
    <security-constraint>
        <display-name>Password Pages (authenticated)</display-name>
        <web-resource-collection>
            <web-resource-name>Password Pages</web-resource-name>
            <url-pattern>/app/index.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>user</role-name>
            <role-name>atendente</role-name>
            <role-name>recepcionista</role-name>

        </auth-constraint>
    </security-constraint>

    <!-- Admin-only area: keep administrative pages restricted to admin role -->
    <security-constraint>
        <display-name>Admin Area</display-name>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/app/admin/*</url-pattern>
            <url-pattern>/app/admin.xhtml</url-pattern>
            <url-pattern>/app/cadastrar_funcionario.xhtml</url-pattern>
            <url-pattern>/app/edit_user.xhtml</url-pattern>
            <url-pattern>/app/cargo/*</url-pattern>
            <url-pattern>/app/localizacao/*</url-pattern>
            <url-pattern>/app/servico/*</url-pattern>
            <url-pattern>/app/administracao.xhtml</url-pattern>
            <!-- add other admin-only pages/patterns here if needed -->
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- atendente-specific pages: allow atendente and admin when needed -->
    <security-constraint>
        <display-name>atendente Area</display-name>
        <web-resource-collection>
            <web-resource-name>atendente Pages</web-resource-name>
            <url-pattern>/app/agendamento/disponibilidade.xhtml</url-pattern>
            <url-pattern>/app/agendamento/fila_atendimentos.xhtml</url-pattern>
            <url-pattern>/app/agendamento/gerenciar_agendamentos.xhtml</url-pattern>
            <url-pattern>/app/atendente/disponibilidade.xhtml</url-pattern>
            <url-pattern>/app/atendente/historico_disponibilidade.xhtml</url-pattern>
            <!-- any other atendente-only endpoints go here -->
        </web-resource-collection>
        <auth-constraint>
            <role-name>atendente</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Recepcionista-specific pages: allow recepcionista and admin -->
    <security-constraint>
        <display-name>Recepcionista Area</display-name>
        <web-resource-collection>
            <web-resource-name>Recepcionista Pages</web-resource-name>
            <url-pattern>/app/agendamento/gerenciar_agendamentos.xhtml</url-pattern>
            <url-pattern>/app/agendamento/fila_atendimentos.xhtml</url-pattern>
            <url-pattern>/app/atendente/disponibilidade.xhtml</url-pattern>
            <url-pattern>/app/atendente/historico_disponibilidade.xhtml</url-pattern>
            <url-pattern>/app/agendamento/*</url-pattern>
            <url-pattern>/app/atendente/*</url-pattern>
            <url-pattern>/app/recepcionista/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>recepcionista</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>login.xhtml</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/templates/forbidden.xhtml</location>
    </error-page>
</web-app>
