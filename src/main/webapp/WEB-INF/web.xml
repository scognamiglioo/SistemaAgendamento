<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <context-param>
        <param-name>jakarta.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <context-param>
        <param-name>jakarta.faces.FACELETS_SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- Roles -->
    <security-role>
        <description>System administrator</description>
        <role-name>admin</role-name>
    </security-role>

    <security-role>
        <description>Common authenticated user</description>
        <role-name>user</role-name>
    </security-role>

    <security-role>
        <description>Funcionario / prestador de servi√ßo</description>
        <role-name>funcionario</role-name>
    </security-role>

    <!-- Public pages (no authentication required) -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public Pages</web-resource-name>
            <url-pattern>/login.xhtml</url-pattern>
            <url-pattern>/activate.xhtml</url-pattern>
            <url-pattern>/app/newlogin.xhtml</url-pattern>
        </web-resource-collection>
        <!-- no <auth-constraint> means public access -->
    </security-constraint>

    <!-- Password management pages: require any authenticated role -->
    <security-constraint>
        <display-name>Password Pages (authenticated)</display-name>
        <web-resource-collection>
            <web-resource-name>Password Pages</web-resource-name>
            <url-pattern>/password/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>user</role-name>
            <role-name>funcionario</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Admin-only area: keep administrative pages restricted to admin role -->
    <security-constraint>
        <display-name>Admin Area</display-name>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/app/*</url-pattern>

        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- App pages for normal authenticated users (and admin). This covers the main app area.
         If there are pages under /app/ that should be limited to specific roles (e.g. funcionario),
         add a separate constraint below with a narrower pattern. -->
    <security-constraint>
        <display-name>User Area</display-name>
        <web-resource-collection>
            <web-resource-name>User Pages</web-resource-name>
            <url-pattern>/app/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Funcionario-specific pages: allow funcionario and admin when needed -->
    <security-constraint>
        <display-name>Funcionario Area</display-name>
        <web-resource-collection>
            <web-resource-name>Funcionario Pages</web-resource-name>
            <url-pattern>/funcionario/*</url-pattern>
            <url-pattern>/app/agendamento/*</url-pattern>
            <!-- any other funcionario-only endpoints go here -->
        </web-resource-collection>
        <auth-constraint>
            <role-name>funcionario</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>login.xhtml</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/templates/forbidden.xhtml</location>
    </error-page>
</web-app>
